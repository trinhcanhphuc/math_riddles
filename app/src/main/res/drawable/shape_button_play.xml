<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            android:gravity="center" >
            <size
                android:width="120dp"
                android:height="120dp" />
            <solid android:color="@android:color/holo_blue_bright" />
        </shape>
    </item>

    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape
            android:shape="oval"
            android:gravity="center" >
            <size
                android:width="120dp"
                android:height="120dp" />
            <solid android:color="@android:color/black" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:left="-20dp"
        android:width="40dp"
        android:height="40dp" >
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/white" />
                <corners
                    android:radius="2dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:gravity="center"
        android:left="-50dp"
        android:width="25dp"
        android:height="60dp" >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" />
            <corners
                android:radius="2dp" />
        </shape>
    </item>
</layer-list>